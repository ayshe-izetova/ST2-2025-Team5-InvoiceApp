@model ST2_2025_Team5_InvoiceApp.Models.Invoice

<h2 class="text-center mb-3 text-danger">Delete Invoice</h2>

<div class="alert alert-warning text-center">
    <strong>Are you sure you want to delete this invoice?</strong>
</div>

<div class="card mb-4">
    <div class="card-header">
        <h5>Invoice Details</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Invoice No:</dt>
            <dd class="col-sm-9">@Model.Number</dd>

            <dt class="col-sm-3">Client:</dt>
            <dd class="col-sm-9">@Model.ClientName</dd>

            <dt class="col-sm-3">Status:</dt>
            <dd class="col-sm-9">@Model.Status</dd>

            <dt class="col-sm-3">Issue Date:</dt>
            <dd class="col-sm-9">@Model.IssueDate?.ToString("dd.MM.yyyy")</dd>

            <dt class="col-sm-3">Due Date:</dt>
            <dd class="col-sm-9">@Model.DueDate?.ToString("dd.MM.yyyy")</dd>

            <dt class="col-sm-3">Email:</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Phone:</dt>
            <dd class="col-sm-9">@Model.Phone</dd>

            <dt class="col-sm-3">Address:</dt>
            <dd class="col-sm-9">@Model.Address</dd>
        </dl>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header">
        <h5>Service Details</h5>
    </div>
    <div class="card-body">
        @if (Model.Items != null && Model.Items.Any())
        {
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Description</th>
                        <th>Unit Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.Description</td>
                            <td>@item.UnitPrice.ToString("0.00")</td>
                            <td>@item.Quantity</td>
                            <td>@(item.UnitPrice * item.Quantity).ToString("0.00")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted">No services for this invoice.</p>
        }
    </div>
</div>

<div class="text-end">
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Confirm Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
