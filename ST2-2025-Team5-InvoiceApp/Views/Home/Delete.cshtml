@model ST2_2025_Team5_InvoiceApp.Models.Invoice

<h2 class="text-center mb-3 text-danger">Delete Invoice</h2>

<div class="alert alert-warning">
    <strong>Are you sure you want to delete this invoice?</strong>
</div>

<div class="card mb-3">
    <div class="card-body">
        <p><strong>Invoice No:</strong> @Model.Number</p>
        <p><strong>Client:</strong> @Model.ClientName</p>
        <p><strong>Service:</strong> @Model.Service</p>
        <p><strong>Total Price:</strong> @(Model.UnitPrice * Model.Quantity)</p>
        <p><strong>Issue Date:</strong> @Model.IssueDate?.ToString("dd/MM/yyyy")</p>
        <p><strong>Due Date:</strong> @Model.DueDate?.ToString("dd/MM/yyyy")</p>
    </div>
</div>

<form method="post" asp-action="Delete" asp-route-id="@Model.Id">
    <button type="submit" class="btn btn-danger me-2">Delete</button>
    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
</form>
